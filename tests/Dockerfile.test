FROM jgwill/ubuntu:py3.6

# Install additional dependencies for testing
RUN apt-get update && apt-get install -y \
    git \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy package files
COPY . /app/

# Install dependencies manually for Python 3.6 compatibility
# Avoid pyproject.toml build system which requires newer setuptools
RUN pip install --upgrade "pip<21.0" && \
    pip install --upgrade "setuptools<60.0" wheel && \
    pip install -r tests/requirements-py36.txt

# Install package using setup.py directly (Python 3.6 compatible)
RUN python setup.py develop

# Create test user (optional, for more realistic testing)
RUN useradd -m -s /bin/bash testuser

# Set up test environment
WORKDIR /app/tests
USER testuser

# Default command runs the test suite
CMD ["python", "test_suite.py"]